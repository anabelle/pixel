{
  "name": "pixel-ecosystem",
  "version": "1.0.0",
  "description": "Master repository for the Pixel ecosystem - AI agents, collaborative art, and Lightning Network integration",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "workspaces": [
    "lnpixels",
    "pixel-landing"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "concurrently \"pnpm -F lnpixels dev\" \"pnpm dev:agent\" \"pnpm -F pixel-landing dev\"",
    "dev:agent": "cd pixel-agent && elizaos dev",
    "test": "pnpm -F lnpixels test && pnpm test:agent",
    "test:agent": "cd pixel-agent && elizaos test",
    "build": "pnpm -F lnpixels build && pnpm -F pixel-landing build",
    "lint": "pnpm -F lnpixels lint && pnpm -F pixel-landing lint",
    "clean": "pnpm -F lnpixels clean && pnpm clean:agent && pnpm -F pixel-landing clean",
    "clean:agent": "cd pixel-agent && rm -rf node_modules dist",
    "install:agent": "cd pixel-agent && bun install",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:startup": "pm2 startup",
    "deploy:setup": "mkdir -p logs && pnpm install && pnpm install:agent && pnpm build",
    "deploy:production": "pnpm build && pnpm pm2:reload"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "pm2": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anabelle/pixel.git"
  },
  "keywords": [
    "ai-agents",
    "pixel-art",
    "lightning-network",
    "bitcoin",
    "nostr",
    "collaborative",
    "elizaos",
    "canvas",
    "digital-art"
  ],
  "author": "Pixel <pixel@example.com>",
  "license": "MIT",
  "dependencies": {
    "pm2-server-monit": "^3.0.0"
  }
}
